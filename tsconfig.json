{
  "include": ["lib/*.js"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "types",
    "target": "ES2020",
    "lib": ["dom"]
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
